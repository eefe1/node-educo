<% if(blog != null ) { %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Courses</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- blog.name %></li>
    </ol>
  </nav>
  <div class="row">
    <div class="col-12 col-md-4">
      <img src="/uploads/<%- blog.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- blog.name %>" loading="lazy">
    </div>
    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- blog.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- blog.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Courses</h4>
          <%- blog.description %>
        </div>
      </div>
      <div class="row pt-4">
        <div class="col-12">
          <h4>Description</h4>
          <ul class="list-group list-group-flush">
            <% blog.category.forEach(function(category, index){ %>
              <li class="list-group-item"><%= category %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>